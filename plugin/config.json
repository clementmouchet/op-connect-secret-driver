{
  "description": "1Password Connect driver for Docker Secrets",
  "documentation": "https://docs.docker.com/engine/extend/",
  "entrypoint": [
    "/op-connect-secret-driver"
  ],
  "interface": {
    "types": [
      "docker.secretprovider/1.0"
    ],
    "socket": "opcsd.sock"
  },
  "network": {
    "type": "host"
  },
  "env": [
    {
      "name": "OP_CONNECT_HOST",
      "description": "1Password Connect Host",
      "settable": ["value"],
      "value": "http://localhost:17450"
    },
    {
      "name": "OP_CONNECT_TOKEN",
      "description": "1Password Connect Token",
      "settable": ["value"],
      "value": ""
    }
  ],
  "mounts": [
    {
      "destination": "/var/run/docker.sock",
      "source": "/var/run/docker.sock",
      "options": [
        "rbind"
      ],
      "type": "bind"
    }
  ],
  "linux": {
    "capabilities": [
      "CAP_SYS_ADMIN"
    ]
  }
}